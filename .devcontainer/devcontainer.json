{
  "name": "Auto-Broker",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  
  "forwardPorts": [5173, 8000, 5432, 6379],
  "portsAttributes": {
    "5173": {
      "label": "Dashboard",
      "onAutoForward": "openBrowser"
    },
    "8000": {
      "label": "API",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "cd /workspace/dashboard && npm ci && cd /workspace && python scripts/seed_dashboard.py || true",
  "postStartCommand": "cd /workspace/api && python main.py & && cd /workspace/dashboard && npm run dev &",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },

  "remoteUser": "vscode"
}
