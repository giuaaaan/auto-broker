{
  "name": "Auto-Broker",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  
  "forwardPorts": [5173, 8000, 5432, 6379],
  "portsAttributes": {
    "5173": {
      "label": "Dashboard",
      "onAutoForward": "openBrowser"
    },
    "8000": {
      "label": "API",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "bash /workspace/.devcontainer/startup.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },

  "remoteUser": "vscode"
}
