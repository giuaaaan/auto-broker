{
  "name": "Auto-Broker",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  
  "forwardPorts": [5173, 8000],
  "portsAttributes": {
    "5173": { "label": "Dashboard", "onAutoForward": "openBrowser" },
    "8000": { "label": "API", "onAutoForward": "notify" }
  },

  "postCreateCommand": "cd /workspaces/auto-broker/dashboard && npm install && npm run build 2>/dev/null || true",
  "postStartCommand": "cd /workspaces/auto-broker/dashboard && npx vite preview --host 0.0.0.0 --port 5173 > /dev/null 2>&1 &",

  "customizations": {
    "vscode": {
      "extensions": ["bradlc.vscode-tailwindcss", "esbenp.prettier-vscode"]
    }
  }
}
