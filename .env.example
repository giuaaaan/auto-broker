# ==========================================
# AUTO-BROKER: Environment Variables
# ==========================================

# Application Mode
DEMO_MODE=true
ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/autobroker
# For SQLite (alternative for simple dev):
# DATABASE_URL=sqlite+aiosqlite:///./autobroker.db

# Database Pool Settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ==========================================
# Redis Configuration
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# ==========================================
# Vault Configuration (HashiCorp)
# ==========================================
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-token

# ==========================================
# ChromaDB Configuration (Vector DB)
# ==========================================
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_URL=http://localhost:8001

# ==========================================
# Ollama Configuration (Local LLM)
# ==========================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# ==========================================
# Security Configuration
# ==========================================
# JWT Secret - Generate a strong secret for production!
# Example: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ==========================================
# API Keys (Optional - for production features)
# ==========================================
# HUME_API_KEY=your_hume_api_key
# HUME_SECRET_KEY=your_hume_secret
# INSIGHTO_API_KEY=your_insighto_key
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ==========================================
# Performance Configuration
# ==========================================
UVICORN_WORKERS=1
UVICORN_RELOAD=true

# Cache TTL (seconds)
CACHE_TTL_DEFAULT=300
CACHE_TTL_LONG=3600

# ==========================================
# Monitoring Configuration
# ==========================================
METRICS_ENABLED=true
METRICS_PORT=9090
