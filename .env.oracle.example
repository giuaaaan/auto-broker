# =============================================================================
# Auto-Broker - Oracle Cloud Free Tier Environment Configuration
# Copy this file to .env.oracle and fill in your values
# =============================================================================

# =============================================================================
# DEMO MODE - Test gratuito senza API esterne
# =============================================================================
# Imposta DEMO_MODE=true per testare senza spendere 1 euro
# - Nessuna chiamata a Hume AI (emozioni simulate)
# - Nessuna chiamata a Insighto (telefonate simulate)
# - Nessuna transazione blockchain reale (gas cost zero)
# - Revenue generato automaticamente ogni 30 secondi
# - Agenti AI simulati in background
# - Dashboard funziona al 100% con dati finti
DEMO_MODE=true

# Quando DEMO_MODE=true, queste variabili sono opzionali:
# HUME_API_KEY, INSIGHTO_API_KEY, JWT_SECRET pu√≤ essere qualsiasi valore

# =============================================================================
# DATABASE
# =============================================================================
DB_USER=autobroker
DB_PASSWORD=change_this_to_a_secure_password_32_chars_min
DB_NAME=autobroker
DATABASE_URL=postgresql+asyncpg://autobroker:change_this_to_a_secure_password_32_chars_min@postgres:5432/autobroker

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# AI SERVICES (Required)
# =============================================================================
# Hume AI - Emotional Intelligence (Required)
# Get your API key at: https://dev.hume.ai/
HUME_API_KEY=your_hume_api_key_here
HUME_SECRET_KEY=your_hume_secret_key_here

# Insighto AI - Carrier Intelligence (Required)
# Get your API key at: https://insighto.ai/
INSIGHTO_API_KEY=your_insighto_api_key_here

# =============================================================================
# SECURITY (Required)
# =============================================================================
# JWT Secret - Generate with: openssl rand -hex 32
JWT_SECRET=change_this_to_a_random_32_char_string_minimum_for_security
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# =============================================================================
# APPLICATION
# =============================================================================
ENV=production
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# PERFORMANCE
# =============================================================================
# Uvicorn workers - 2 is optimal for 1 CPU
UVICORN_WORKERS=2
UVICORN_LOOP=uvloop

# Database pool
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================
# Local backup retention (days)
RETENTION_DAYS=7
BACKUP_DIR=./backups

# Oracle Object Storage (Optional - for cloud backups)
# OCI_BUCKET=your-bucket-name
# OCI_NAMESPACE=your-namespace

# =============================================================================
# MONITORING (Optional)
# =============================================================================
ENABLE_METRICS=true

# =============================================================================
# LOCAL AI - OLLAMA (Optional, Disabled by Default)
# Enable only if you have enough RAM (needs +1.5GB)
# Set to "true" to enable local AI instead of cloud services
# =============================================================================
OLLAMA_ENABLED=false
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.2:latest

# To enable Ollama:
# 1. Set OLLAMA_ENABLED=true
# 2. Deploy with: docker-compose -f docker-compose.oracle.enterprise.yml --profile local-ai up -d

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_WEBSOCKET=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# =============================================================================
# NOTES
# =============================================================================
# 1. NEVER commit .env.oracle to Git!
# 2. Use strong passwords (32+ characters)
# 3. Keep JWT_SECRET secure and rotate periodically
# 4. For production, enable SSL/HTTPS
# 5. Regular backups recommended (see scripts/backup-oracle.sh)
